<div class='panel-body'>
    <h2>Posts</h2>    
    <div class='panel panel-default'>
      <div class='panel-body'>
        <table class='table table-hover no-border-top'>
          <thead>
          <tr>
            <th>S.No</th>
            <th>Author Name</th>          
            <th>Title</th>         
            <th>Body</th>
            <th>Images</th>
          </tr>
        </thead>
        <tbody>
          <% i=0 %>
        <% @posts.each do |post| %>
          <tr>
            <td><%= i=i+1 %></td>           
            <td><%= post.author.name %></td>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td>

                <% unless post.post_images.empty? %>               
                <% post.post_images.each do |pic| %> 
                <div class='thumbnail'>
                <%= wicked_pdf_image_tag pic.avatar.url(:thumb) %>                
                </div> 
                <% end %><% end %>



            </td>
        </tr>
        <% end %>
        </tbody>
        </table>
      </div>
    </div>    
  </div>

