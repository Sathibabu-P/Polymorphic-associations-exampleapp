<%- model_class = Student -%>
<div class="page-header">
  <h1><%= @student.name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Post Name</th>
      <th>Post Author</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>     
        <td><%= post.title %></td>
        <td><%= post.author.name %></td> 

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_post', :default => t("helpers.links.new_post")),
              new_post_path(:sid => @student), :class => 'btn btn-warning'  %>